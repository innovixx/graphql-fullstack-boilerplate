{
  "name": "graphql-fullstack-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:Innovixx/graphql-fullstack-boilerplate.git",
  "author": "Innovixx <support@innovixx.co.uk>",
  "license": "MIT",
  "scripts": {
    "build:server": "cd server && pnpm build",
    "build:client": "cd client && pnpm build",
    "dev:server": "cd server && pnpm dev",
    "dev:client": "cd client && pnpm dev",
    "dev:mobile": "cd mobile && yarn dev",
    "dev": "concurrently \"pnpm dev:server\" \"pnpm dev:client\"",
    "build": "pnpm build:server && pnpm build:client",
    "serve": "cd server && pnpm serve"
  },
  "dependencies": {
    "concurrently": "^8.0.1"
  }
}